package ex06;

import java.lang.reflect.InvocationTargetException;
import java.util.Scanner;

public class MemberDaoMain {
	public static void main(String[] args) {
		
		String choice = command();
		
		try {
			Class<?> clazz = Class.forName("ex06. MemberDaoOracle");
			MemberDao newInstance = (MemberDao) clazz.getDeclaredConstructor().newInstance();
			dao.selectAll();
		} catch (Exception e) {
			e.printStackTrace();
		}
	
	}
	private static String command() {
		Scanner scan = new Scanner(System.in);
		String choice;
		while(true) {
			System.out.println("DB선택 1.오라클 | 2.MySQL");
			choice = scan.nextLine();
			if(choice.equals("1")) {
				System.out.println("오라클 데이터베이스 선택");
				choice = "오라클";
				break;
			}else if(choice.equals("2")) {
				System.out.println("MySQL 데이터베이스 선택");
				choice = "MySQL";
				break;
			}else {
				System.out.println("다시입력");
				
			}
		}
		scan.close();
		return choice;
	}
}
